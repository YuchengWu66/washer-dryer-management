<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.userInfo.UserInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/go_to_edit"
        tools:context=".ui.editProfile.PersonalFileActivity">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_perm_identity_24px" />

        <TextView
            android:id="@+id/first_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"
            android:text="First Name"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/portrait"
            app:layout_constraintTop_toBottomOf="@id/portrait" />

        <TextView
            android:id="@+id/first_name_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="0dp"
            tools:text="First Name"
            app:layout_constraintStart_toEndOf="@+id/first_name_title"
            app:layout_constraintBottom_toBottomOf="@id/first_name_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/first_name_title"
            android:layout_width="0dp"
            />
        <TextView
            android:id="@+id/last_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Last Name"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/portrait"
            app:layout_constraintTop_toBottomOf="@id/first_name_title" />

        <TextView
            android:id="@+id/last_name_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="0dp"
            tools:text="Last Name"
            app:layout_constraintStart_toEndOf="@+id/last_name_title"
            app:layout_constraintBottom_toBottomOf="@id/last_name_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/last_name_title"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:text="Email"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/portrait"
            app:layout_constraintTop_toBottomOf="@id/last_name_title" />

        <TextView
            android:id="@+id/email_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="0dp"
            tools:text="email"
            app:layout_constraintStart_toEndOf="@+id/email_title"
            app:layout_constraintBottom_toBottomOf="@id/email_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/email_title"
            android:layout_width="0dp"
            />
        <TextView
            android:id="@+id/about_me_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:text="About me"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/portrait"
            app:layout_constraintTop_toBottomOf="@id/email_title" />

        <TextView
            android:id="@+id/about_me_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="0dp"
            tools:text="About me"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@+id/about_me_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/about_me_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:scrollbars="vertical"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"
        android:id = "@+id/go_back"
        android:textSize="24sp"
        android:text = "Go back"
        android:drawableStart="@drawable/ic_clear_24px"/>
    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:id = "@+id/go_to_edit"
        android:textSize="24sp"
        android:drawableStart="@drawable/ic_check_circle_outline_24px"
        android:text = "Edit"/>

</androidx.constraintlayout.widget.ConstraintLayout>
